{
  "name": "snowball",
  // image is hosted at https://github.com/runeharvest/docker
  //"image": "docker.com/runeharvest/vscode-dev:latest",
   "build": {
     "dockerfile": "Dockerfile"
   },
  "containerUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "xaver.clang-format",
        "bibhasdn.unique-lines",
        "Gruntfuggly.todo-tree",
        "eriklynd.json-tools",
        "maattdd.gitless"
      ]
    }
  },
  "workspaceFolder": "/src",
  "workspaceMount": "source=${localWorkspaceFolder},target=/src,type=bind,consistency=cached",
  "mounts": [
    "source=${localWorkspaceFolder}/../shared,target=/src/shared,type=bind"
  ]
}